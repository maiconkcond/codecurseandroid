<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="checkbox.com.example.maiconh.checkbox.MainActivity">

    <TextView
        android:text="Quais animais de estimaÃ§ao voce tem?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView"
        android:textSize="24sp" />

    <CheckBox
        android:text="Cao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="23dp"
        android:id="@+id/cbcaoID" />

    <CheckBox
        android:text="Gato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cbGatoID"
        android:layout_below="@+id/cbcaoID"
        android:layout_alignLeft="@+id/cbcaoID"
        android:layout_alignStart="@+id/cbcaoID" />

    <CheckBox
        android:text="Papagaio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cbGatoID"
        android:layout_alignLeft="@+id/cbGatoID"
        android:layout_alignStart="@+id/cbGatoID"
        android:id="@+id/cbPapagaioID" />

    <Button
        android:text="Mostrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnMostrar" />

    <TextView
        android:text="Mostrar...."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnMostrar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:id="@+id/txtExibicaoID" />
</RelativeLayout>
